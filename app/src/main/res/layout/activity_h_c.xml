<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activities.HCActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="622dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-77dp"
        android:layout_marginRight="60dp"
        app:columnCount="2"
        app:rowCount="5">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnGoToHCAcademics"
            android:layout_width="33dp"
            android:layout_height="152dp"
            android:layout_margin="23dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_gravity="fill">>

            <LinearLayout
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="177dp"
                    android:layout_height="79dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/academics" />

                <TextView
                    android:id="@+id/tvFowardComplaints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="Academics" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnGoToSocial"
            android:layout_width="147dp"
            android:layout_height="104dp"
            android:layout_margin="23dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_gravity="fill"
            tools:layout_marginRight="15dp">>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="144dp"
                    android:layout_height="93dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/social" />

                <TextView
                    android:id="@+id/tvChoosePortfolio"
                    android:layout_width="127dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="Social" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnGoToHCSports"
            android:layout_width="114dp"
            android:layout_height="138dp"
            android:layout_margin="23dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_gravity="fill">>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="149dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="129dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="17dp"
                    app:srcCompat="@drawable/sports" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center_horizontal"
                    android:text="HC Sports" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnGoToDomestics"
            android:layout_width="136dp"
            android:layout_height="138dp"
            android:layout_margin="23dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_gravity="fill"
            tools:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="177dp"
                    android:layout_height="84dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@drawable/view_complains" />

                <TextView
                    android:id="@+id/tvViewComplaints"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="-5dp"
                    android:gravity="center_horizontal"
                    android:text="Domestic And Religion" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnGoToResManager"
            android:layout_width="147dp"
            android:layout_height="150dp"
            android:layout_margin="23dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            tools:layout_marginRight="15dp">>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="144dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/resmanager" />

                <TextView
                    android:id="@+id/tvResManager"
                    android:layout_width="127dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="Res Manager/Warden"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnGoCareTaker"
            android:layout_width="147dp"
            android:layout_height="104dp"
            android:layout_margin="23dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_gravity="fill"
            tools:layout_marginRight="15dp">>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="144dp"
                    android:layout_height="93dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/caretaker" />

                <TextView
                    android:layout_width="127dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:text="CareTaker" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>